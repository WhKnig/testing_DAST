<%- include('header') %>

    <h1 class="card-title">Accounts Overview</h1>

    <div class="grid-3">
        <div class="balance-card primary">
            <div class="balance-label">Total Assets</div>
            <div class="balance-amount">$<%= total.toFixed(2) %>
            </div>
        </div>
    </div>

    <h2 class="card-title" style="margin-top: 2rem;">My Accounts</h2>
    <div class="grid-3">
        <% accounts.forEach(function(acc) { %>
            <div class="card">
                <h3>
                    <%= acc.type %>
                </h3>
                <p class="balance-amount" style="color: var(--primary);">$<%= parseFloat(acc.balance).toFixed(2) %>
                </p>
                <p style="color: #6b7280; font-size: 0.9rem;">
                    <%= acc.account_number %>
                </p>
                <a href="/transactions?account=<%= acc.id %>" class="btn"
                    style="margin-top: 1rem; width: auto; font-size: 0.8rem; padding: 0.5rem 1rem;">View History</a>
            </div>
            <% }); %>
    </div>

    <%- include('footer') %>