<h2>Pages</h2>

<div class="card">
    <form method="GET">
        <input type="text" name="q" placeholder="Search pages..." value="<%= params[:q] %>">
        <button type="submit">Search</button>
    </form>
</div>

<div class="card">
    <a href="/pages/new" style="display:inline-block; margin-bottom: 1rem; color: var(--primary);">+ New Page</a>
    
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Slug</th>
                <th>Public</th>
            </tr>
        </thead>
        <tbody>
            <% @pages.each do |page| %>
                <tr>
                    <td><%= page['title'] %></td>
                    <td><%= page['slug'] %></td>
                    <td><%= page['public'] %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
